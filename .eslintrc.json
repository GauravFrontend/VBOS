{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "@typescript-eslint/ban-types": "off",
    "@typescript-eslint/no-redeclare": "off",
    "no-unused-vars": "off", // Turn off the no-unused-vars rule
    "no-undef": "off", // Turn off the no-undef rule,
    "no-redeclare": "off"
  }
}
